<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	mc:Ignorable="d"
	IsHitTestVisible="false"
	Foreground="White">
	<StackPanel Width="100">
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
			<Border x:Name="Health" Background="Green" Height="5" Width="50" />
			<Border x:Name="Damage" Background="Red" Height="5" Width="50" />
		</StackPanel>
		<TextBlock x:Name="PlayerName" Margin="0,1,0,0" FontSize="12" Text="Player" HorizontalAlignment="Center" TextWrapping="Wrap" />
	</StackPanel>
</UserControl>