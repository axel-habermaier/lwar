<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:input="clr-namespace:Pegasus.Framework.UserInterface.Input;assembly=PegasusUI"
	mc:Ignorable="d"
	Foreground="White"
	HorizontalAlignment="Stretch"
	VerticalAlignment="Stretch"
	Background="Black"
	Focusable="true"
	d:DesignHeight="300" d:DesignWidth="300">
	<UserControl.InputBindings>
		<input:KeyBinding Key="Escape" Method="Abort"></input:KeyBinding>
	</UserControl.InputBindings>
	<StackPanel Orientation="Horizontal"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				IsHitTestVisible="False">

		<TextBlock Text="Connecting to " />
		<TextBlock Text="{Binding ServerEndPoint}" />
		<TextBlock Text=" (" />
		<TextBlock Text="{Binding ElapsedTime}" />
		<TextBlock Text=" seconds)" />
		<TextBlock Text="..." />
		

	</StackPanel>
</UserControl>