<UserControl x:Class="Pegasus.UserInterface.Views.MessageBoxView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:input="clr-namespace:Pegasus.UserInterface.Input"
			 xmlns:views="clr-namespace:Pegasus.UserInterface.Views"
			 d:DataContext="{d:DesignInstance Type={x:Type views:MessageBoxViewModel}, IsDesignTimeCreatable=True}"
			 mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
			 HorizontalAlignment="Stretch"
			 VerticalAlignment="Stretch"
			 Foreground="White"
			 input:InputManager.CapturesInput="true"
			 Background="#AA000000">
	<UserControl.InputBindings>
		<input:KeyBinding Key="Escape" Method="Close" />
		<input:KeyBinding Key="Return" Method="Close" />
		<input:KeyBinding Key="NumpadEnter" Method="Close" />
		<input:KeyBinding Key="Space" Method="Close" />
	</UserControl.InputBindings>
	<ContentControl Style="{DynamicResource MessageBoxStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="200" MaxWidth="600"/>
</UserControl>