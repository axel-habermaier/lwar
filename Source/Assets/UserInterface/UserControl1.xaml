<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="300" Width="505"
             FontFamily="Liberation Mono" 
             FontSize="11" 
             TextOptions.TextRenderingMode="Aliased">
    <Canvas>
		<Border Background="Red"><TextBlock Margin="42,31,0,15" Foreground="#FF1AA6E8">Hallo</TextBlock></Border>
        <Button Content="Hallo Welt" Canvas.Top="120" Canvas.Left="180.666" Background="#FFD60707">
            <Button.Style>
                <Style>
                    <Setter Property="Control.Foreground" Value="White"></Setter>
                    <Setter Property="Control.Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
								<Border Background="{TemplateBinding Background}">
									<ContentPresenter Content="{TemplateBinding Content}"></ContentPresenter>
								</Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style> 
            </Button.Style>
        </Button>
    </Canvas>
