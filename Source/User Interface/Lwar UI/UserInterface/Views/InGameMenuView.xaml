<UserControl x:Class="Lwar.UserInterface.Views.InGameMenu"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:input="clr-namespace:Pegasus.Framework.UserInterface.Input;assembly=PegasusUI"
			 mc:Ignorable="d"
			 HorizontalAlignment="Stretch"
			 VerticalAlignment="Stretch"
			 input:Keyboard.HandlesAllInput="true"
			 input:Mouse.HandlesAllInput="true"
			 Focusable="true"
			 Background="#AF252525">
	<UserControl.InputBindings>
		<input:KeyBinding Key="Escape" Method="Continue" TriggerOnRepeat="false"></input:KeyBinding>
	</UserControl.InputBindings>
	<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
		<Button Margin="3" HorizontalAlignment="Center" VerticalAlignment="Center" Click="{Binding Continue}">Continue</Button>
		<Button Margin="3" HorizontalAlignment="Center" VerticalAlignment="Center" Click="{Binding Leave}">Leave</Button>
		<Button Margin="3" HorizontalAlignment="Center" VerticalAlignment="Center" Click="{Binding Exit}">Exit</Button>
	</StackPanel>
</UserControl>