<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:converters="clr-namespace:Pegasus.Framework.UserInterface.Converters;assembly=PegasusUI"
			 mc:Ignorable="d"
			 HorizontalAlignment="Center" VerticalAlignment="Center">
	<StackPanel Visibility="{Binding IsTopLevel, Converter={converters:BooleanToVisibilityConverter}}">>
		<TextBlock Foreground="White" Margin="0,0,0,10">Welcome to Lwar!</TextBlock>
		<Button Margin="3" HorizontalAlignment="Center" VerticalAlignment="Center" Click="{Binding PlaySingle}">Single Player</Button>
		<Button Margin="3" HorizontalAlignment="Center" VerticalAlignment="Center" Click="{Binding Options}">Options</Button>
		<Button Margin="3" HorizontalAlignment="Center" VerticalAlignment="Center" Click="{Binding Exit}">Exit</Button>
	</StackPanel>
</UserControl>