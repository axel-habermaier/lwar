<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:controls="clr-namespace:Pegasus.Framework.UserInterface.Controls"
		xmlns:views="clr-namespace:Pegasus.Framework.UserInterface.Views"
		mc:Ignorable="d"
		FontFamily="Liberation Mono"
		FontSize="11"
		TextOptions.TextRenderingMode="Aliased" Background="Black" Title="Pegasus">
	<controls:AreaPanel x:Name="LayoutRoot">
		<views:ConsoleView DataContext="{Binding Console}" />
		<views:DebugOverlayView DataContext="{Binding DebugOverlay}"></views:DebugOverlayView>
	</controls:AreaPanel>
</Window>